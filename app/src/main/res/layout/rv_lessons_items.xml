<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/cosmos_background">

        <!-- Lesson Number -->
        <TextView
            android:id="@+id/lesson_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lesson 1"
            android:textSize="18sp"
            android:textColor="@color/rv_text_color"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_alignParentStart="true"/>

        <!-- Lesson Title -->
        <TextView
            android:id="@+id/lesson_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Introduction to the Universe"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:layout_below="@id/lesson_number"
            android:layout_marginEnd="100dp"
            android:layout_marginTop="15dp"/>

        <!-- Lesson Icon (Space Themed) -->
        <ImageView
            android:id="@+id/lesson_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_some_planets"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
             />




    </RelativeLayout>

    <ImageView
        android:id="@+id/dark_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_transparent_black"
        android:visibility="invisible" />

    <!-- Lock Icon (Hidden by Default) -->
    <ImageView
        android:id="@+id/lock_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_lock"
        android:visibility="invisible"
        app:tint="#FFFFFF" />


</androidx.cardview.widget.CardView>
