<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Centauri" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Centauri" parent="Base.Theme.Centauri" />


    <style name="LessonTitleStyle">
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textStyle">bold</item>

        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="LessonTextStyle">
        <item name="android:textColor">@color/starry_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>

        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
</resources>