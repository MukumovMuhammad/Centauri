<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Centauri" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Centauri" parent="Base.Theme.Centauri" />


    <style name="LessonTitleStyle">
        <item name="android:textColor">@color/starry_white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>

        <item name="android:layout_marginTop">30dp</item>

        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowColor">@color/deep_space_black</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="LessonTextStyle">
        <item name="android:textColor">@color/starry_white</item>
        <item name="android:textSize">16sp</item>

        <item name="android:layout_margin">30dp</item>

        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowColor">@color/deep_space_black</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>