<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Centauri" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Centauri" parent="Base.Theme.Centauri" />

    <style name="LessonTitleStyle">
        <item name="android:textColor">@color/starry_white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>

        <item name="android:layout_marginTop">30dp</item>

        <item name="background">@drawable/scrim</item>
    </style>

    <style name="LessonTextStyle">
        <item name="android:textColor">@color/starry_white</item>
        <item name="android:textSize">16sp</item>

        <item name="android:layout_margin">30dp</item>
        <item name="background">@drawable/scrim</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerRadius">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:titleMarginTop">10dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Custom circle progressbar style   -->
    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false </item>
        <item name="android:progressDrawable">@drawable/circle</item>
    </style>


</resources>